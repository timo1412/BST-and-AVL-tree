                <Grid x:Name="task22Form" Visibility="Collapsed" Margin="0,8,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- titul -->
                        <RowDefinition Height="Auto"/>
                        <!-- ID pacienta -->
                        <RowDefinition Height="Auto"/>
                        <!-- kód PCR -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
               Text="Priradenie PCR testu k osobe"
               FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ID pacienta:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbAssignPersonId" Margin="0,0,0,12"
               ToolTip="Unikátne číslo pacienta (napr. ABC123)"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Kód PCR testu:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbAssignPcrCode"
               ToolTip="Celé číslo – kód PCR testu"/>
                </Grid>
                
                <Grid x:Name="task23Form" Visibility="Collapsed" Margin="0,8,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- titul -->
                        <RowDefinition Height="Auto"/>
                        <!-- kód PCR -->
                        <RowDefinition Height="Auto"/>
                        <!-- kód kraja -->
                        <RowDefinition Height="Auto"/>
                        <!-- kód okresu -->
                        <RowDefinition Height="Auto"/>
                        <!-- výsledok -->
                        <RowDefinition Height="Auto"/>
                        <!-- hodnota -->
                        <RowDefinition Height="Auto"/>
                        <!-- poznámka -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
             Text="Úprava PCR testu"
             FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <!-- Kód existujúceho PCR testu -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Kód PCR testu:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbEditPcrCode" Margin="0,0,0,12"
             ToolTip="Celé číslo – kód existujúceho PCR testu"/>

                    <!-- Kód kraja -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Kód kraja:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbEditRegion" Margin="0,0,0,12"
             ToolTip="Celé číslo – kód kraja"/>

                    <!-- Kód okresu -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Kód okresu:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <TextBox   Grid.Row="3" Grid.Column="1" x:Name="tbEditDistrict" Margin="0,0,0,12"
             ToolTip="Celé číslo – kód okresu"/>

                    <!-- Výsledok testu -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Pozitívny:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <CheckBox  Grid.Row="4" Grid.Column="1" x:Name="chkEditResult" Content="Áno" Margin="0,0,0,12"/>

                    <!-- Hodnota testu -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Hodnota testu:" VerticalAlignment="Center" Margin="0,0,8,6"/>
                    <TextBox   Grid.Row="5" Grid.Column="1" x:Name="tbEditValue" Margin="0,0,0,12"
             ToolTip="Číselná hodnota (double)"/>

                    <!-- Poznámka -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Poznámka:" VerticalAlignment="Top" Margin="0,0,8,0"/>
                    <TextBox   Grid.Row="6" Grid.Column="1" x:Name="tbEditNote" AcceptsReturn="True" Height="60" TextWrapping="Wrap"/>
                </Grid>



                <!-- rozťahovač pre odtlačenie prípadných budúcich prvkov dole -->
                <StackPanel.Height>
                    <Binding RelativeSource="{RelativeSource AncestorType=Grid}" Path="ActualHeight"/>
                </StackPanel.Height>
            </StackPanel>
        </Border>

        <!-- PRAVÁ PRACOVNÁ PLOCHA -->
        <Grid Grid.Column="1" Background="White" x:Name="mainArea">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- horný panel -->
                <RowDefinition Height="*"/>
                <!-- tabuľky -->
                <RowDefinition Height="Auto"/>
                <!-- KONZOLA -->
                <RowDefinition Height="Auto"/>
                <!-- spodný status -->
            </Grid.RowDefinitions>

            <!-- horný panel (voliteľný) -->
            <DockPanel Grid.Row="0" Margin="8" LastChildFill="False">
                <TextBlock Text="Zoznamy" FontSize="16" FontWeight="SemiBold" Margin="0,0,12,0"/>
            </DockPanel>

            <!-- tabuľkové zobrazenie -->
            <TabControl Grid.Row="1" x:Name="tabLists" Margin="8">
                <TabItem Header="Osoby">
                    <DataGrid x:Name="dgPersons"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserAddRows="False"
          EnableRowVirtualization="True"
          EnableColumnVirtualization="True"
          SelectionMode="Extended"
          Margin="0"
          AlternationCount="2"
          RowDetailsVisibilityMode="VisibleWhenSelected">

                        <!-- Stĺpce: vlastnosti osoby -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID pacienta" Binding="{Binding Person.UniqueNumber}" Width="140"/>
                            <DataGridTextColumn Header="Meno"        Binding="{Binding Person.FirstName}"   Width="*"/>
                            <DataGridTextColumn Header="Priezvisko"  Binding="{Binding Person.LastName}"    Width="*"/>
                            <DataGridTextColumn Header="Dátum nar."  Binding="{Binding Person.Birth, StringFormat=\{0:yyyy-MM-dd\}}" Width="140"/>
                        </DataGrid.Columns>

                        <!-- Detaily riadku: referenčný PCR test tejto osoby (zobrazí sa po označení riadku) -->
                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="0,4,0,8" Padding="8" BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="PCR kód:" FontWeight="SemiBold" Margin="0,0,8,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Test.UniqueNumberPCR}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Dátum testu:" FontWeight="SemiBold" Margin="16,0,8,4"/>
                                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Test.DateStartTest, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Pozitívny:" FontWeight="SemiBold" Margin="0,0,8,4"/>
                                        <CheckBox  Grid.Row="1" Grid.Column="1" IsChecked="{Binding Test.ResultOfTest}" IsEnabled="False"/>

                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Hodnota:" FontWeight="SemiBold" Margin="16,0,8,4"/>
                                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Test.ValueOfTest}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Okres:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Test.NumberOfDistrict}"/>

                                        <TextBlock Grid.Row="2" Grid.Column="2" Text="Kraj:" FontWeight="SemiBold" Margin="16,0,8,0"/>
                                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Test.NumberOfRegion}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </TabItem>
                <TabItem Header="PCR testy">
                    <DataGrid x:Name="dgPcrs"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      EnableRowVirtualization="True"
                      EnableColumnVirtualization="True"
                      SelectionMode="Extended"
                      Margin="0"
                      AlternationCount="2"/>
                </TabItem>
                <TabItem Header="Kraje">
                    <!-- Horná mriežka krajov, detail riadku = testy tohto kraja -->
                    <DataGrid x:Name="dgRegions"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        CanUserAddRows="False"
                        EnableRowVirtualization="True"
                        EnableColumnVirtualization="True"
                        SelectionMode="Extended"
                        Margin="0"
                        AlternationCount="2"
                        RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kraj" Binding="{Binding Item1}" />
                            <DataGridTextColumn Header="Počet chorých" Binding="{Binding Item2}" />
                        </DataGrid.Columns>


                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="0,4,0,8" Padding="8" BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" CornerRadius="4">
                                    <!-- Vnorená mriežka so zoznamom testov pre daný kraj -->
                                    <DataGrid ItemsSource="{Binding Tests}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    Margin="0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="PCR kód"     Binding="{Binding UniqueNumberPCR}" Width="120"/>
                                            <DataGridTextColumn Header="Dátum testu" Binding="{Binding DateStartTest, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="160"/>
                                            <DataGridCheckBoxColumn Header="Pozitívny" Binding="{Binding ResultOfTest}" Width="100"/>
                                            <DataGridTextColumn Header="Hodnota"     Binding="{Binding ValueOfTest}" Width="100"/>
                                            <DataGridTextColumn Header="Okres"       Binding="{Binding NumberOfDistrict}" Width="80"/>
                                            <DataGridTextColumn Header="Kraj"        Binding="{Binding NumberOfRegion}"  Width="80"/>
                                            <DataGridTextColumn Header="Poznámka"    Binding="{Binding Note}" Width="2*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Okresy">
                    <DataGrid x:Name="dgDistricts"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        CanUserAddRows="False"
                        EnableRowVirtualization="True"
                        EnableColumnVirtualization="True"
                        SelectionMode="Extended"
                        Margin="0"
                        AlternationCount="2"
                        RowDetailsVisibilityMode="VisibleWhenSelected">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Okres" Binding="{Binding Item1}"/>
                            <DataGridTextColumn Header="Počet chorých" Binding="{Binding Item2}" />
                        </DataGrid.Columns>

                        <DataGrid.RowDetailsTemplate>
                            <DataTemplate>
                                <Border Margin="0,4,0,8" Padding="8" BorderBrush="#DDD" BorderThickness="1" Background="#FAFAFA" CornerRadius="4">
                                    <DataGrid ItemsSource="{Binding Tests}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    HeadersVisibility="Column"
                    Margin="0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn   Header="PCR kód"     Binding="{Binding UniqueNumberPCR}" Width="120"/>
                                            <DataGridTextColumn   Header="Dátum testu" Binding="{Binding DateStartTest, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="160"/>
                                            <DataGridCheckBoxColumn Header="Pozitívny" Binding="{Binding ResultOfTest}" Width="100"/>
                                            <DataGridTextColumn   Header="Hodnota"     Binding="{Binding ValueOfTest}" Width="100"/>
                                            <DataGridTextColumn   Header="Okres"       Binding="{Binding NumberOfDistrict}" Width="80"/>
                                            <DataGridTextColumn   Header="Kraj"        Binding="{Binding NumberOfRegion}"  Width="80"/>
                                            <DataGridTextColumn   Header="Poznámka"    Binding="{Binding Note}" Width="2*"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </DataTemplate>
                        </DataGrid.RowDetailsTemplate>
                    </DataGrid>
                </TabItem>
            </TabControl>

            <!-- GUI konzola -->
            <Grid Grid.Row="2" Margin="8,0,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                    <!-- výška konzoly -->
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,4">
                    <TextBlock Text="Konzola" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    <Button Content="Vyčistiť" Click="BtnClearConsole_Click" Padding="8,2" />
                </DockPanel>

                <TextBox x:Name="txtConsole"
                 Grid.Row="1"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 TextWrapping="NoWrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"/>
            </Grid>

            <!-- spodný status riadok -->
            <StatusBar Grid.Row="3">
                <StatusBarItem>
                    <TextBlock x:Name="txtStatus" Text="Pripravené" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>